<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="测试1"
        app:layout_constraintBottom_toTopOf="@id/button2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="测试2"
        app:layout_constraintBottom_toTopOf="@id/test_fps_start"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button1" />

    <Button
        android:id="@+id/test_fps_start"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="开启测试fps"
        app:layout_constraintBottom_toTopOf="@id/test_fps_stop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button2" />

    <Button
        android:id="@+id/test_fps_stop"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="结束测试fps"
        app:layout_constraintBottom_toTopOf="@id/test_RunTime_APT"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/test_fps_start" />

    <Button
        android:id="@+id/test_RunTime_APT"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="测试 RunTime APT"
        app:layout_constraintBottom_toTopOf="@id/test_Class_APT"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/test_fps_stop" />

    <Button
        android:id="@+id/test_Class_APT"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="测试 Class APT"
        app:layout_constraintBottom_toTopOf="@id/jump_to_second"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/test_RunTime_APT" />

    <Button
        android:id="@+id/jump_to_second"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="跳转到second"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/test_RunTime_APT" />

</androidx.constraintlayout.widget.ConstraintLayout>